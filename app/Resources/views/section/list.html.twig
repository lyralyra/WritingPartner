{% block body %}
    <h1>
		Sections
		<a href="{{ path('section_new', {'projectId': project.id }) }}" class="btn btn-success"><i class="fa fa-plus"></i> Create a new section</a>	
	</h1>

	{% if not(sections is empty) %}
		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for section in sections %}
				<tr>
					<td><a href="{{ path('section_show', { 'id': section.id }) }}">{{ section.title }}</a></td>
					<td>
						 <ul class="no-bullets inline-list">
							<li>
								<a href="{{ path('section_show', { 'id': section.id }) }}" class="btn btn-primary"  data-toggle="tooltip" title="Show" data-original-title="Show"><i class="fa fa-eye"></i></a>
							</li>
							<li>
								<a href="{{ path('section_edit', { 'id': section.id }) }}" class="btn btn-primary" data-toggle="tooltip" title="Edit" data-original-title="Edit"><i class="fa fa-edit"></i></a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	{% else %}
		<em>No sections yet.</em>
	{% endif %}
{% endblock %}
