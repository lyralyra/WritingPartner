{% extends 'base.html.twig' %}

{% block body %}
    <h1>Characters list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td><a href="{{ path('character_show', { 'id': character.id }) }}">{{ character.id }}</a></td>
                <td>{{ character.firstname }}</td>
                <td>{{ character.lastname }}</td>
                <td>{{ character.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('character_show', { 'id': character.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('character_edit', { 'id': character.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('character_new') }}">Create a new character</a>
        </li>
    </ul>
{% endblock %}
