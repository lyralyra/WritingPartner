{% block body %}
    <h1>
		Characters
		<a href="{{ path('character_new', {'projectId': project.id }) }}" class="btn btn-success"><i class="fa fa-plus"></i> Create a new character</a>	
	</h1>

	{% if characters.count>0 %}
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for character in characters %}
				<tr>
					<td><a href="{{ path('character_show', { 'id': character.id }) }}">{{ character.firstname }} {{ character.lastname.uppercase }}</a></td>
					<td>{{ character.description }}</td>
					<td>
						<ul class="no-bullets inline-list">
							<li>
								<a href="{{ path('character_show', { 'id': character.id }) }}" class="btn btn-primary"  data-toggle="tooltip" title="Show" data-original-title="Show"><i class="fa fa-eye"></i></a>
							</li>
							<li>
								<a href="{{ path('character_edit', { 'id': character.id }) }}" class="btn btn-primary" data-toggle="tooltip" title="Edit" data-original-title="Edit"><i class="fa fa-edit"></i></a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	{% else %}
		<em>No characters yet.</em>
	{% endif %}
{% endblock %}
